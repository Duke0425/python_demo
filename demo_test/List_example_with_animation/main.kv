CusAnchorLayout:
    anchor_x: "center"
    anchor_y: "center"
    padding: 10
    ScrollView:
        size_hint: None, None
        size: 600, 600
        canvas.before:
            Color:
                rgba: 1, 0, 0, 1
            Line:
                width: 1
                rectangle: self.x, self.y, self.width, self.height
        GridLayout:
            id: grid_layout
            size_hint_y: None
            height: self.minimum_height
            cols: 1

<CusBackgroudButton>:
    orientation: 'lr-tb'
    canvas.before:
        Color:
            rgba: root.bg_color
        Rectangle:
            pos: self.pos
            size: self.size
    Image:
        size_hint: None, None
        size: root.display_image_width, 50
        source: root.display_image_source
        opacity: root.display_image_opacity
    Label:
        text: root.label_text
        color: root.label_font_color
        bold: True
        halign:'left'
        valign: 'middle'
        text_size: self.size
        size_hint: None, None
        size: self.parent.width - 200, 50
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 1
                points: self.parent.x, self.parent.y, self.parent.right, self.parent.y
    Label:
        size_hint: None, None
        size: 100,50
        text: root.time_label_text                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                          
        color: root.label_font_color
        bold: True
        halign:'right'
        valign: 'middle'
        text_size: self.size
    Label:
        text: root.extra_text
        text_size: self.size
        halign:'left'
        valign:'middle'
        color: root.label_font_color
        bold: True
        size_hint_y: None
        height: root.extra_text_height
        opacity: root.extra_text_opacity
